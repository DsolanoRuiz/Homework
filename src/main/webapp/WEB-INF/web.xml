<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
<servlet>
        <servlet-name>HomeworkServlet</servlet-name>
        <servlet-class>com.homework.web.Homework</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>RegistHomeworkServlet</servlet-name>
        <servlet-class>com.homework.web.RegistHomeworkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistUserServlet</servlet-name>
        <servlet-class>com.homework.web.RegistUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeworkServlet</servlet-name>
        <url-pattern>/homework-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistHomeworkServlet</servlet-name>
        <url-pattern>/form-regist-homework</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistUserServlet</servlet-name>
        <url-pattern>/form-regist-user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
